@using test2.Models.ManagementModels.ZhongXian.Normal

@model ResultViewModel

@if (Model.ResultCode == 0)
{
    <table class="table table-hover table-info table-borderless">
        <tr class="table-dark fw-bold active text-center "><td colspan="2" class="fs-1 table-active text-warning">成功借閱</td></tr>
        <tr class="fs-3 fw-bold" style="width:200px"><td>借閱ID:</td><td>@Model.Cid</td></tr>
        <tr class="fs-3 fw-bold" style="width:200px"><td>借閱者姓名:</td><td title="@Model.cName">@Model.cName</td></tr>
        <tr class="fs-3 fw-bold" style="width:200px"><td>書籍編號: :</td><td title="@Model.bookcode">@Model.bookcode</td></tr>
        <tr class="fs-3 fw-bold" style="width:200px"><td>書籍名稱: :</td><td title="@Model.title">@Model.title</td></tr>
        <tr class="fs-3 fw-bold" style="width:200px"><td>借閱日期: </td><td>@DateTime.Now</td></tr>
        <tr class="fs-3 fw-bold" style="width:200px"><td>還書日期:</td><td>@DateTime.Now.AddDays(14).ToString("yyyy/MM/dd")</td></tr>
    </table>
}
else
{
    <div class="fs-1 alert alert-danger text-center">@Model.Message</div>
}

