@model test2.Models.ManagementModels.ZhongXian.Normal.ResultViewModel


@if (Model.ResultCode != 0)
{
    <table class="table table-hover table-hover">
        <tr class="table-success text-center fw-bold"><td colspan="2" class="table-active fs-1">成功預約</td></tr>
        <tr class="fs-3 fw-bold"><td>借閱ID:</td><td>@Model.Cid</tr>
        <tr class="fs-3 fw-bold"><td>借閱人:</td><td>@Model.cName</td></tr>
        <tr class="fs-3 fw-bold"><td>書籍名稱: </td><td>@Model.title</td></tr>
        <tr class="fs-4 fw-bold"><td>預約日期:</td><td>@DateTime.Now</td></tr>
    </table>
}
else
{
    <div class="alert alert-danger fs-1">@Model.Message</div>
}