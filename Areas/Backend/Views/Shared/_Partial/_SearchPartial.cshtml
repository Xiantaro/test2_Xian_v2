
<!-- 主內容 START -->
<div class="row mt-1">
    <div class="col">
        <!-- 搜尋 START-->
        <h1>書籍管理</h1>
        <hr />
        <form id="BookForm" method="post" class="d-flex justify-content-between align-items-end flex-wrap gap-3">
            <!-- 查詢表單欄位 -->
            <div class="d-flex flex-wrap gap-3">
                <div>
                    <label for="book_ISBN" class="form-label mb-0">ISBN：</label>
                    <input id="book_ISBN" name="book_ISBN" type="text" class="form-control form-control-sm" />
                </div>
                <div>
                    <label for="book_KeyWord" class="form-label mb-0">關鍵字：</label>
                    <input id="book_KeyWord" name="book_KeyWord" type="text" class="form-control form-control-sm"/>
                </div>
                <div>
                    <label for="book_state" class="form-label mb-0">書本狀況：</label>
                    <select id="book_state" name="book_state" class="form-select form-select-sm">
                        <option value="ALL">全部</option>
                        <option value="借閱中">借閱中</option>
                        <option value="已歸還">已歸還</option>
                        <option value="已逾期">已逾期</option>
                    </select>
                </div>

                <div class="align-self-end">
                    <button id="book_select" type="button" class="btn btn-primary btn-sm">查詢</button>
                </div>
                <div class="align-self-end">
                    <button id="book_clear" type="button" class="btn-lg btn-close btn-light"></button>
                </div>
            </div>
            <!-- 排序兄弟 START-->
            <div class="d-flex flex-wrap gap-3">
                <div>
                    <label for="borrow_perPage" class="form-label mb-0">顯示數量：</label>
                    <select id="borrow_perPage" name="borrow_perPage" class="form-select form-select-sm">
                        <option value="10">10</option>
                        <option value="20">20</option>
                        <option value="30">30</option>
                    </select>
                </div>
                <!-- 排序依據 -->
                <div>
                    <label for="borrow_OrderDate" class="form-label mb-0">排序依據：</label>
                    <select id="borrow_OrderDate" name="borrow_OrderDate" class="form-select form-select-sm">
                        <option value="borrowDate">出版日期</option>
                        <option value="dueDate">借閱期限</option>
                    </select>
                </div>
                <!-- 排序方向 -->
                <div>
                    <label for="borrow_orderBy" class="form-label mb-0">排序方向：</label>
                    <select id="borrow_orderBy" name="borrow_orderBy" class="form-select form-select-sm">
                        <option value="desc">遞減（新到舊）</option>
                        <option value="asc">遞增（舊到新）</option>
                    </select>
                </div>
            </div>
            <!-- 排序兄弟 END -->
        </form>
        <div id="BookContent">
            <h1>請輸入</h1>
        </div>
        <!-- 借閱狀況 END -->
    </div>
    <!-- 右邊的功能 END -->
</div>
<!-- 主內容 END -->
